<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProdutoController">
   <center>
      <VBox prefHeight="174.0" prefWidth="282.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="21.0" prefWidth="262.0" spacing="10.0">
               <children>
                  <Button fx:id="btn_novoProduto" mnemonicParsing="false" onAction="#novoProduto" text="Novo Produto" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox prefHeight="0.0" prefWidth="364.0" spacing="10.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ID" />
                  <TextField fx:id="txf_id" prefHeight="25.0" prefWidth="27.0" />
                  <Button fx:id="btm_buscar" mnemonicParsing="false" onAction="#buscar" text="Buscar" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="tb_id" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="tb_nome" prefWidth="75.0" text="Nome" />
                  <TableColumn fx:id="tb_valor" prefWidth="75.0" text="Valor" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
