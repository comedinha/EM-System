<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ConfigDatabaseController">
   <center>
      <VBox alignment="CENTER_LEFT" prefHeight="284.0" prefWidth="227.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="SQLUser:" />
            <TextField fx:id="txf_sqlusr" />
            <Label text="SQLPass:" />
            <PasswordField fx:id="txf_sqlpass" />
            <Label text="Admin Username:" />
            <TextField fx:id="txf_adminusr" />
            <Label text="Admin Pass:" />
            <PasswordField fx:id="txf_adminpass" />
            <Label text="Admin Name:" />
            <TextField fx:id="txf_adminname" />
            <HBox alignment="CENTER_LEFT" prefHeight="37.0" prefWidth="207.0" spacing="5.0">
               <children>
                  <Button fx:id="btn_sqlok" mnemonicParsing="false" onAction="#btn_csqlok" text="OK" />
                  <Button fx:id="btn_sqlquit" mnemonicParsing="false" onAction="#btn_csqlquit" text="Sair" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
